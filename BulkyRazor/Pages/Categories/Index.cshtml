@page
@using BulkyRazor.Models
@model BulkyRazor.Pages.Categories.IndexModel
@{
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                Create New Category
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>

                <td>
                    <div class="w-50 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                        <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
