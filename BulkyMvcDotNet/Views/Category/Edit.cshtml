@model Category
@* this is how to comment here *@

<form method="post">
    @* <input asp-for="NameOfModelFieldId hidden />  we must add this incase we name the id field anything different from Id*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>

        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0">Category Name</label>
            <input asp-for="Name" class="form-control" type="text" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" type="number" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@* Adding Partials from shared views *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}